
<%= @book.title %>
Author: <%= @book.author.name %>
<div class="">
  Reviews:
  <% @reviews.each do |review| %>
    <div class="review">
      <p>Rating: <%= review.rating %></p>
      <p><a href="/users/<%= review.user.id %>"><%= review.user.first_name%></a> says: <%=review.content %></p>
      <p>Posted on: <%= review.created_at%></p>
    </div>
  <% end %>

  <div class="">
    <h2>Add a Review </h2>
    <form class="" action="/books/<%= @book.id %>/reviews" method="post">
      <label>Add a Review</label>
      <br>
      <textarea name="content"></textarea>
      <br>
      <label>Rating: </label>
      <select class="" name="rating">
        <option value="">Please choose</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <button type="submit" name="button">Submit Review</button>
    </form>

  </div>

</div>
